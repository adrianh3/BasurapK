<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoo"
    tools:context="adrian.ejempl.basurapk.Formulario">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="138dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="261dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="12dp"
        app:srcCompat="@drawable/logonegro" />

    <Button
        android:id="@+id/btnEnviar"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="307dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="99dp"
        android:layout_marginTop="570dp"
        android:layout_marginEnd="99dp"
        android:text="Enviar" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="368dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="132dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="LLENAR FORMULARIO"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/sx"
        android:layout_width="473dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="27dp"
        android:fontFamily="sans-serif-black"
        android:text="¿Camión Sustituto?"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/c2"
        android:layout_width="473dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="194dp"
        android:layout_marginEnd="26dp"
        android:fontFamily="sans-serif-black"
        android:text="¿Personal Sustituto?"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/c"
        android:layout_width="473dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="289dp"
        android:layout_marginEnd="26dp"
        android:fontFamily="sans-serif-black"
        android:text="Comentarios del recorrido"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edtComentarios"
        android:layout_width="464dp"
        android:layout_height="155dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="327dp"
        android:layout_marginEnd="36dp"
        android:background="@android:color/darker_gray"
        android:ems="10"
        android:gravity="start|top"
        android:hint="¿Algún comentarios sobre el recorrido? (opcional)"
        android:inputType="textMultiLine" />

    <RadioGroup
        android:id="@+id/rbCamion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="279dp">

        <RadioButton
            android:id="@+id/rbSiCamion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Si" />

        <RadioButton
            android:id="@+id/rbNoCamion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="No" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/rbChofer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="223dp"
        android:layout_marginEnd="177dp">

        <RadioButton
            android:id="@+id/rbSiChofer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Si" />

        <RadioButton
            android:id="@+id/rbNoChofer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="No" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView39"
        android:layout_width="wrap_content"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="495dp"
        android:layout_marginEnd="22dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Recuerda enviar tu formulario si tienes algun comentario sobre el recorrido no te olvides informarlo en la caja...!"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15sp" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>