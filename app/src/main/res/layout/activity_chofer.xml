<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoo"
    tools:context="adrian.ejempl.basurapk.chofer">

    <Button
        android:id="@+id/btnIniciar"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="325dp"
        android:layout_marginEnd="42dp"
        android:text="Iniciar Recorrido" />

    <Button
        android:id="@+id/btnCancelar"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="394dp"
        android:layout_marginEnd="42dp"
        android:text="Cancelar Recorrido" />

    <Button
        android:id="@+id/btnFinalizar"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="466dp"
        android:layout_marginEnd="42dp"
        android:text="Finalizar Recorrido" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="189dp"
        android:layout_height="251dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="111dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="111dp"
        app:srcCompat="@drawable/logonegro" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="37dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Bienvenidos"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="522dp"
        android:layout_marginEnd="2dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="¡No olvides tener tu ubicación activada!"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15sp" />

</RelativeLayout>