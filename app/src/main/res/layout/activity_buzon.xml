<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoo"
    tools:context="adrian.ejempl.basurapk.Buzon">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
        android:id="@+id/imglogo"
        android:layout_width="121dp"
        android:layout_height="148dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="144dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="144dp"
        app:srcCompat="@drawable/logonegro" />


            <TextView
                android:id="@+id/textView25"
                android:layout_width="340dp"
                android:layout_height="46dp"
                android:layout_below="@+id/imglogo"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="-4dp"
                android:layout_marginEnd="35dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Mensajes Recibidos"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/btnActualiza"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="3dp"
                android:layout_marginTop="7dp"
                app:srcCompat="@drawable/actualiza" />

            <TextView
                android:id="@+id/textView41"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="62dp"
                android:text="Actualizar" />


        </RelativeLayout>
    </ScrollView>

    <ListView
        android:id="@+id/lvLista1"
        android:layout_width="394dp"
        android:layout_height="467dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="14dp"
        android:background="@android:color/darker_gray" />


</RelativeLayout>




