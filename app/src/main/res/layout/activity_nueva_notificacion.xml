<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/verde"
    tools:context="adrian.ejempl.basurapk.NuevaNotificacion">

    <Button
        android:id="@+id/btnEnviarN"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="115dp"
        android:layout_marginTop="423dp"
        android:layout_marginEnd="115dp"
        android:text="Publicar" />

    <EditText
        android:id="@+id/edtNuevaNoticia"
        android:layout_width="wrap_content"
        android:layout_height="156dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="254dp"
        android:layout_marginEnd="14dp"
        android:background="@android:color/darker_gray"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Escribir noticia..."
        android:inputType="textMultiLine" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="121dp"
        android:layout_height="167dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="144dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="144dp"
        app:srcCompat="@drawable/logonegro" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="336dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="37dp"
        android:gravity="center"
        android:text="Nueva Noticia"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="115dp" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="381dp"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="474dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text='Para editar y/o eliminar una noticia puedes hacerlo desde la pagina web que BasurapK tiene para ti..!'
        android:textColor="@android:color/holo_red_dark" />

</RelativeLayout>